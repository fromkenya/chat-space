= render 'shared/side'

.chat-main
  .main-header
    .left-box
      .current-group
        %h2
          = @group.name
      %ul.member-list
        Member :
        - @group.users.each do |user|
          %li.member
            = user.name + ""
    = link_to edit_group_path(@group) do
      .edit-btn Edit
  .main-chat
    %ul.messages
      = render partial: 'message', collection: @messages
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :content, class: 'text-area', placeholder: 'type a message'
          = f.label :image, class: 'upload-label' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'image-file'
      = f.submit 'Send', class: 'submit-btn'
